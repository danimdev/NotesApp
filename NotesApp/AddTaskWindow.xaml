<Window x:Class="NotesApp.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesApp"
        mc:Ignorable="d"
        Title="New Task" Height="300" Width="300"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="DimGray" MouseDown="Grid_MouseDown"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Title" FontSize="20"/>
            <TextBox x:Name="TitleNameTextBox" Width="200"/>
            <Label Content="Description" FontSize="20"/>
            <TextBox x:Name="DescriptionTextBox" Width="200"/>
            <Button Click="CreateNewTaskButton" Content="Create New Task" Margin="0,10"/>
            <Button Click="CancelButton" Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
