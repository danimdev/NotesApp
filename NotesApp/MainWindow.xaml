<Window x:Class="NotesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesApp"
        mc:Ignorable="d"
        Title="NotesApp" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Create Note"/>
        </StackPanel>

        <ItemsControl x:Name="icTodolist" Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        
                        <TextBlock Width="200" Height="50" Text="{Binding Title}"/>
                        <TextBlock Width="200" Height="100" Text="{Binding Description}"/>
                        
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <StackPanel Grid.Row="1">
            <ListBox>
                <ListBoxItem Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Text="exampleText" FontSize="30"/>
                </ListBoxItem>
                <ListBoxItem Height="100" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Text="description" FontSize="15"/>
                </ListBoxItem>
            </ListBox>
        </StackPanel>
        
        <!--make new note-->
    </Grid>
</Window>
